<?xml version='1.0'?>
<!DOCTYPE TransformSchema>
<transform name="PersonToEmailPGP" longName="To Email [PGP]" type="generic" >
  <description>get the mails from pgp key server.</description>
  <parameters>
  </parameters>
  <config>
    <value name="need_root">true</value>
